---
import { Image } from "astro:assets";
import Facebook from "../assets/facebook.png";
import Instagram from "../assets/instagram.png";
import Logo from "../assets/logo.png";
import Pinterest from "../assets/pinterest.png";
import Twitter from "../assets/twitter.png";
import ProtectedImage from "../components/ProtectedImage.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Coloring Cubs">
	<section
		class="min-h-screen grid place-content-center place-items-center gap-12"
	>
		<Image
			src={Logo}
			alt="Cute colorful bear cub logo"
			height="500"
			width="500"
		/>

		<ProtectedImage alt="Cute colorful bear cub logo" file="logo.png" />
		<ProtectedImage alt="Cute colorful bear cub logo" file="logo.png" />

		<h1 class="text-5xl font-semibold font-heading">Coloring Cub</h1>

		<p class="place-self-start">
			Sit consequat ipsum cillum pariatur Lorem mollit ipsum laboris. Mollit
			ipsum in aliqua velit. Ea tempor cillum voluptate tempor magna laborum
			consectetur ut incididunt minim labore et laborum sunt. Esse deserunt
			voluptate do velit excepteur. Fugiat aute amet cillum id aliqua tempor
			amet nostrud ut amet Lorem qui voluptate.
		</p>

		<div class="flex gap-4">
			<a href="https://www.pinterest.com/coloringcub">
				<Image src={Pinterest} alt="Pinterest" height="50" width="50" />
			</a>

			<a href="https://www.facebook.com/coloringcub">
				<Image src={Facebook} alt="Facebook" height="50" width="50" />
			</a>

			<a href="https://www.instagram.com/coloringcub/">
				<Image src={Instagram} alt="Instagram" height="50" width="50" />
			</a>

			<a href="https://twitter.com/coloringcub">
				<Image src={Twitter} alt="Twitter" height="50" width="50" />
			</a>
		</div>
	</section>
</Layout>
